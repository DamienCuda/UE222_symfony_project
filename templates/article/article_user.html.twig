{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container mb-5"> 
        <h1>Liste des articles</h1>
        
        {# Bouton permettant de passer de la vue administrateur Ã  la vue utilisateur #}
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('article_index') }}"><button class="btn btn-primary">Afficher en tant qu'administrateur</button></a>
        {% endif %}
        <div class="d-flex flex-wrap">
            {% for article in articles %}
            <div class="col-12 col-sm-12 col-md-3 col-xl-3 mt-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ article.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content|slice(0, 80) }}...</p>
                        <p class="card-text">{{ article.Category.name }}</p>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary d-flex justify-content-center">En savoir plus</a>
                    </div>
                </div>
            </div>
            {% else %}
                    <tr>
                        <td colspan="12">Aucun article</td>
                    </tr>
            {% endfor %}
        </div>
        {# System de pagination #}
        <div class="d-flex justify-content-end">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
