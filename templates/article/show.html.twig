{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    {{parent()}}
    <main class="container">
        <section class="row">
            <h1 class="my-4"><i class='bx bx-file'></i> Article</h1>
        </section>

        <section class="row">
            <table class="table">
                <tbody>
                    <tr>
                        <th>#</th>
                        <td>{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ article.title }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ article.content }}</td>
                    </tr>
                    <tr>
                        <th>Categorie</th>
                        <td>
                            {% if article.Category.name is defined %}
                                {{ article.Category.name }}
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
        <div class="d-flex justify-content-between">
            <a href="{{ path('article_index') }}"><button class="btn btn-primary">Retour</button></a>
            {# Les boutons d'Ã©dition et de suppression ne sont visible que par les adminstrateurs #}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('article_edit', {'id': article.id}) }}"><button class="btn btn-primary">Modifier</button></a>
            {% endif %}
        </div>
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('article/_delete_form.html.twig') }}
            {% endif %}
    </main>
{% endblock %}
