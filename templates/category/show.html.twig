{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    {{parent()}}
    <main class="container">
        <h1 class="my-4"><i class='bx bx-category'></i> Catégories</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a href="{{ path('category_index') }}"><button class="btn btn-primary">Retour</button></a>
            <a href="{{ path('category_edit', {'id': category.id}) }}"><button class="btn btn-primary">Modifier</button></a>
        </div>
        {{ include('category/_delete_form.html.twig') }}
    </main>
{% endblock %}
