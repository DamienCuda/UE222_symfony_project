{% extends 'base.html.twig' %}

{% block title %}Les Categories{% endblock %}

{% block body %}
    {{parent()}}
    <main class="container">
        <h1>Liste des Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('category_new') }}">Créer une catégorie</a>
    </main>
{% endblock %}
